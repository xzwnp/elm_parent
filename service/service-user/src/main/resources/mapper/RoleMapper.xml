<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.user.mapper.RoleMapper">

    <resultMap id="BaseResultMap" type="com.example.user.entity.Role">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="role" column="role" jdbcType="VARCHAR"/>
        <result property="desc" column="desc" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="findRoleByUserId" resultType="com.example.user.entity.Role">
        select role.*
        from role
                 join user_role ur on ur.role_id = role.id
                 join user on ur.user_id = user.id
        where user.id = #{userId}
    </select>
</mapper>
